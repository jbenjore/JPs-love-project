<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Shop</th>
    <th>Description</th>
    <th>Cappuccinoscore</th>
    <th>Espressoscore</th>
    <th>Personalityscore</th>
    <th>Atmospherescore</th>
    <th>Total Score</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= link_to review.shop.name, :controller => "shops", :action => "show", :id => review.shop.id %></td>
    <td><%= review.description %></td>
    <td><%= review.CappuccinoScore %></td>
    <td><%= review.EspressoScore %></td>
    <td><%= review.PersonalityScore %></td>
    <td><%= review.AtmosphereScore %></td>
    <td><%= totalScore(review) %> (<%= scoreToHundred(totalScore(review))%>)</td>
    <td><%= link_to review.user.name, profile_path(review.user) %></td>
    <td><%= link_to 'Show', review %></td>
    <% if current_user.admin || (current_user.reviewer && current_user.id == review.user_id)%>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, :confirm => 'Are you sure?', :method => :delete %> TODO: make this a soft delete</td>
    <% else %>
        <td> </td>
        <td> </td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

